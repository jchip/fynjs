{
  "compilerOptions": {
    "outDir": "dist",
    "lib": ["ES2020"],
    "module": "CommonJS",
    "esModuleInterop": true,
    "target": "ES2020",
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "types": ["node"],
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "alwaysStrict": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["src"]
}
