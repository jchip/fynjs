{
  "name": "unwrap-npm-cmd",
  "version": "1.1.2",
  "description": "Unwrap npm's node.js bin CMD batch for js files on Windows",
  "type": "module",
  "types": "dist-cjs/index.d.ts",
  "main": "dist-cjs/index.cjs",
  "module": "dist-esm/index.js",
  "exports": {
    ".": {
      "import": "./dist-esm/index.js",
      "require": "./dist-cjs/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "rm -rf dist-* && tsc --build tsconfig.esm.json && tsc --build tsconfig.cjs.json && ts2mjs --cjs --skip-ts --remove-source dist-cjs",
    "test": "vitest run",
    "coverage": "vitest run --coverage",
    "prepublishOnly": "xrun build",
    "prepack": "publish-util-prepack",
    "postpack": "publish-util-postpack"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "files": [
    "dist-cjs",
    "dist-esm"
  ],
  "keywords": [
    "unwrap-npm-cmd",
    "unwrap",
    "npm",
    "cmd",
    "batch",
    "windows"
  ],
  "author": "Joel Chen <joel123@gmail.com>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/jchip/unwrap-npm-cmd.git"
  },
  "dependencies": {
    "tslib": "^2.6.2",
    "which": "^2.0.2"
  },
  "devDependencies": {
    "@types/node": "^22.15.30",
    "@types/which": "^3.0.4",
    "@vitest/coverage-v8": "^3.2.2",
    "prettier": "^3.5.3",
    "publish-util": "^2.1.0",
    "ts2mjs": "^4.0.0",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vitest": "^3.2.2"
  },
  "prettier": {
    "printWidth": 100
  }
}
