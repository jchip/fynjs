{
  "name": "check-pkg-new-version",
  "version": "1.0.0",
  "description": "Help npm CLI packages to check newer version",
  "type": "module",
  "types": "dist-cjs/index.d.ts",
  "main": "dist-cjs/index.cjs",
  "module": "dist-esm/index.js",
  "exports": {
    ".": {
      "import": "./dist-esm/index.js",
      "require": "./dist-cjs/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "rm -rf dist-* && tsc --build tsconfig.esm.json && tsc --build tsconfig.cjs.json && ts2mjs --cjs --skip-ts --remove-source dist-cjs",
    "test": "vitest run",
    "coverage": "vitest run --coverage",
    "prepublishOnly": "xrun build"
  },
  "keywords": [
    "npm",
    "package",
    "new",
    "version",
    "check",
    "checker",
    "update",
    "notify",
    "notifier",
    "module",
    "cli"
  ],
  "author": "Joel Chen",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/jchip/check-pkg-new-version.git"
  },
  "dependencies": {
    "check-pkg-new-version-engine": "^1.0.2",
    "got": "^11.8.1",
    "ini": "^2.0.0",
    "semver": "^7.3.4",
    "tslib": "^2.6.2"
  },
  "devDependencies": {
    "@types/node": "^22.15.30",
    "@vitest/coverage-v8": "^3.2.2",
    "prettier": "^3.5.3",
    "ts2mjs": "^4.0.0",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vitest": "^3.2.2"
  },
  "files": [
    "dist-cjs",
    "dist-esm"
  ],
  "prettier": {
    "printWidth": 100
  }
}
