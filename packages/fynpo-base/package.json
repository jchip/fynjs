{
  "name": "@fynpo/base",
  "version": "1.1.22",
  "description": "zero setup monorepo manager for node.js",
  "type": "module",
  "types": "dist-cjs/index.d.ts",
  "main": "dist-cjs/index.cjs",
  "module": "dist-esm/index.js",
  "exports": {
    ".": {
      "import": "./dist-esm/index.js",
      "require": "./dist-cjs/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "engines": {
    "node": ">=20"
  },
  "homepage": "https://github.com/jchip/fynjs",
  "scripts": {
    "build": "rm -rf dist-* && tsc --build tsconfig.esm.json && tsc --build tsconfig.cjs.json && ts2mjs --cjs --skip-ts --remove-source dist-cjs",
    "test": "vitest run",
    "coverage": "vitest run --coverage",
    "prepublishOnly": "xrun build",
    "prepack": "publish-util-prepack",
    "postpack": "publish-util-postpack"
  },
  "keywords": [],
  "author": "Walmart GTP.js Team and Contributors",
  "contributors": [
    "Divya Vannilaparambath",
    "Joel Chen"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.com/"
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/lodash": "^4.17.15",
    "@types/minimatch": "^3.0.5",
    "@types/node": "^22.15.30",
    "@vitest/coverage-v8": "^3.2.2",
    "npm-packlist": "jchip/npm-packlist#v1",
    "prettier": "^3.5.3",
    "publish-util": "^2.1.0",
    "ts2mjs": "^4.0.0",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vitest": "^3.2.2"
  },
  "dependencies": {
    "filter-scan-dir": "^1.6.0",
    "is-path-inside": "^3.0.3",
    "lodash": "^4.17.21",
    "minimatch": "^3.1.2",
    "optional-require": "^1.1.10",
    "semver": "^7.7.2",
    "tslib": "^2.8.1"
  },
  "files": [
    "dist-cjs",
    "dist-esm"
  ],
  "prettier": {
    "printWidth": 100
  },
  "fyn": {
    "dependencies": {}
  }
}
