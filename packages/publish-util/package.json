{
  "name": "publish-util",
  "version": "2.1.0",
  "description": "Some util to clean up package.json for npm publish",
  "type": "module",
  "types": "dist-cjs/index.d.ts",
  "main": "dist-cjs/index.cjs",
  "module": "dist-esm/index.js",
  "exports": {
    ".": {
      "import": "./dist-esm/index.js",
      "require": "./dist-cjs/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "rm -rf dist-* && tsc --build tsconfig.esm.json && tsc --build tsconfig.cjs.json && ts2mjs --cjs --skip-ts --remove-source dist-cjs",
    "test": "vitest run",
    "coverage": "vitest run --coverage",
    "prepublishOnly": "node check.js && xrun build",
    "prepack": "node bin/publish-util-prepack.js",
    "postpack": "node bin/publish-util-postpack.js",
    "postinstall": "node dist-esm/postinstall.js || true"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jchip/publish-util.git"
  },
  "bin": {
    "publish-util-prepublishonly": "bin/publish-util-prepublishonly.js",
    "publish-util-prepack": "bin/publish-util-prepack.js",
    "publish-util-postpack": "bin/publish-util-postpack.js",
    "do-publish": "bin/do-publish.js"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.com/",
    "access": "public"
  },
  "files": [
    "bin",
    "dist-cjs",
    "dist-esm"
  ],
  "keywords": [
    "npm",
    "publish",
    "cleanup",
    "clean",
    "package.json",
    "util"
  ],
  "author": "Joel Chen",
  "license": "Apache-2.0",
  "dependencies": {
    "execa": "^9.5.2",
    "find-up": "^7.0.0",
    "lodash": "^4.17.21",
    "tslib": "^2.6.2"
  },
  "devDependencies": {
    "@types/lodash": "^4.17.15",
    "@types/node": "^22.15.30",
    "@vitest/coverage-v8": "^3.2.2",
    "prettier": "^3.5.3",
    "ts2mjs": "^4.0.0",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vitest": "^3.2.2"
  },
  "prettier": {
    "printWidth": 100
  }
}
