{
  "name": "xflight",
  "version": "2.0.2",
  "description": "Handle inflight promise to avoid async duplication",
  "engines": {
    "node": ">=20"
  },
  "type": "module",
  "types": "dist-cjs/index.d.ts",
  "main": "dist-cjs/index.cjs",
  "module": "dist-esm/index.js",
  "exports": {
    ".": {
      "import": "./dist-esm/index.js",
      "require": "./dist-cjs/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "rm -rf dist-* && nvx tsc --build tsconfig.esm.json && nvx tsc --build tsconfig.cjs.json && nvx ts2mjs --cjs --skip-ts --remove-source dist-cjs",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jchip/fynjs.git",
    "directory": "packages/xflight"
  },
  "files": [
    "dist-cjs",
    "dist-esm"
  ],
  "keywords": [
    "inflight",
    "promise"
  ],
  "author": "Joel Chen",
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/node": "^22.15.29",
    "@vitest/coverage-v8": "^3.2.0",
    "@xarc/run": "^1.1.2",
    "ts2mjs": "^4.0.0",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vitest": "^3.2.0"
  }
}
